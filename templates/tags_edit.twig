{% extends "layout.twig" %}

{% block content %}
    <h1>Edit Tags</h1>

    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/tags">Tags</a></li>
        <li class="breadcrumb-item"><a href="/tags/{{ tags.id }}">{{ tags.name }}</a></li>
        <li class="breadcrumb-item">Edit</li>
    </ol>

    <form method="post">
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" name="name" value="{{ tags.name }}" class="form-control" id="name">
            </div>
        </div>
        <div class="form-group row">
            <label for="badge" class="col-sm-2 col-form-label">Badge</label>
            <div class="col-sm-10">
                <input type="text" name="badge" value="{{ tags.badge }}" class="form-control" id="badge">
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Edit</button>
            </div>
        </div>
    </form>
{% endblock %}