{% extends "layout.twig" %}

{% block title %}Create Tag{% endblock %}

{% block content %}
    <h1>Create Tag</h1>

    {% if failed %}
        <div class="alert alert-danger" role="alert">There are empty values.</div>
    {% endif %}

    <form method="post">
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" name="name" class="form-control" id="name">
            </div>
        </div>
        <div class="form-group row">
            <label for="badge" class="col-sm-2 col-form-label">Badge</label>
            <div class="col-sm-10">
                <input type="text" name="badge" class="form-control" id="badge">
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
{% endblock %}