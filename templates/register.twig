{% extends "layout.twig" %}

{% block title %}Register{% endblock %}

{% block content %}
    <h1>Register</h1>

    {% if next is not null %}
        <div class="alert alert-warning" role="alert">You need to be logged in to access this page.</div>
    {% endif %}

    {% if failed %}
        <div class="alert alert-danger" role="alert">Something went wrong.</div>
    {% endif %}

    {% if created %}
        <div class="alert alert-success" role="alert">User created.</div>
    {% endif %}

    <form method="post">
        <div class="form-group row">
            <label for="username" class="col-sm-2 col-form-label">Username</label>
            <div class="col-sm-10">
                <input type="text" name="username" class="form-control" id="username">
            </div>
        </div>
        <div class="form-group row">
            <label for="email" class="col-sm-2 col-form-label">E-mail</label>
            <div class="col-sm-10">
                <input type="text" name="email" class="form-control" id="email">
            </div>
        </div>
        <div class="form-group row">
            <label for="password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" name="password" class="form-control" id="password">
            </div>
        </div>
        <div class="form-group row">
            <label for="role" class="col-sm-2 col-form-label">Role</label>
            <div class="col-sm-10">
                <select class="form-control" id="role" name="role">
                    <option value="0">User</option>
                    <option value="100">Editor</option>
                    <option value="200">Contributor</option>
                    <option value="300">Admin</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Sign up</button>
            </div>
        </div>
    </form>
{% endblock %}
